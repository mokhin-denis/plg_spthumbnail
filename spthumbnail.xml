<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_SPTHUMBNAIL</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>October 2012</creationDate>
	<author>SP CYEND</author>
	<authorEmail>info@cyend.com</authorEmail>
	<authorUrl>http://www.cyend.com</authorUrl>
	<copyright>SP CYEND - All rights reserved.</copyright>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<!--  The version string is recorded in the components table -->
	<version>3.1.1</version>
    <!-- Changes: -->
    <!-- 3.0.1 Joomla 3.0 compatible -->
    <!-- 3.1.0 Bootstrap 3  -->
    <!-- 3.1.1 Added support for TAG header  -->
    <description>PLG_CONTENT_SPTHUMBNAIL_XML_DESCRIPTION</description>
    <files>
        <filename plugin="spthumbnail">spthumbnail.php</filename>
        <filename>gpl-3.0.txt</filename>
        <filename>index.html</filename>
        <filename>README.md</filename>
        <folder>js</folder>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB.plg_content_spthumbnail.ini</language>
        <language tag="en-GB">en-GB.plg_content_spthumbnail.sys.ini</language>
        <language tag="ru-RU">ru-RU.plg_content_spthumbnail.ini</language>
        <language tag="ru-RU">ru-RU.plg_content_spthumbnail.sys.ini</language>
    </languages>

    <params>
        <param name="thumbnails_for" type="list" default="0" label="PLG_CONTENT_SPTHUMBNAIL_FOR" description="PLG_CONTENT_SPTHUMBNAIL_FOR_DESCRIPTION">
            <option value="0">PLG_CONTENT_SPTHUMBNAIL_ONLY_CLASS</option>
            <option value="1">PLG_CONTENT_SPTHUMBNAIL_EXCEPT_CLASS</option>
            <option value="2">PLG_CONTENT_SPTHUMBNAIL_ALL_IMAGES</option>
        </param>
        <param name="class" type="text" default="" label="PLG_CONTENT_SPTHUMBNAIL_CLASS" description="PLG_CONTENT_SPTHUMBNAIL_CLASS_DESCRIPTION" />
    </params>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="thumbnails_for" type="list" default="0" label="PLG_CONTENT_SPTHUMBNAIL_FOR" description="PLG_CONTENT_SPTHUMBNAIL_FOR_DESCRIPTION">
                    <option value="0">PLG_CONTENT_SPTHUMBNAIL_ONLY_CLASS</option>
                    <option value="1">PLG_CONTENT_SPTHUMBNAIL_EXCEPT_CLASS</option>
                    <option value="2">PLG_CONTENT_SPTHUMBNAIL_ALL_IMAGES</option>
                </field>
                <field name="class" type="text" default="" label="PLG_CONTENT_SPTHUMBNAIL_CLASS" description="PLG_CONTENT_SPTHUMBNAIL_CLASS_DESCRIPTION" />
                <field name="titletag" type="headertag" label="PLG_CONTENT_SPTHUMBNAIL_TITLE_TAG" description="PLG_CONTENT_SPTHUMBNAIL_TITLE_TAG_DESC" default="h5"/>
            </fieldset>
        </fields>
	</config>
</extension>